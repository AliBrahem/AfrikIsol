{% trans_default_domain 'FOSUserBundle' %}

<div class="col-lg-3 col-xs-6" align="center">
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    <table id="lol" >
        <tr>
            <td><label for="exampleInputEmail1">Mot de passe actuel </td> </label> <td>{{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }} </td>
            {{ form_errors(form.current_password) }}
        </tr>
        <tr>
            <td><label for="exampleInputEmail1">Nouveau mot de passe </td> </label> <td>{{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }} </td>
            {{ form_errors(form.plainPassword.first) }}
        </tr>
        <tr>
            <td><label for="exampleInputEmail1">Vérification</td> </label> <td>{{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }} </td>
            {{ form_errors(form.plainPassword.second) }}
        </tr>
        <tr>
             {{ form_rest(form) }}
        </tr>
    </table>
        <div>
        <input type="submit" class="btn btn-primary btn-block btn-flat" value="Mettre à jour" />
        </div>
</form>
</div>