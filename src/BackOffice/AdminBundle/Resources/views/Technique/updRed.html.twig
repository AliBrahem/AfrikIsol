? "AdminBundle::layoutSUP.html.twig"
: "AdminBundle::layoutTech.html.twig"%}
{% block user_content %}

    <!-- Small boxes (Stat box) -->
    <div class="row">
        <h3> Modification de Redcution n°{{id}} </h3>
        <div class="col-lg-3 col-xs-6">
            <!-- small box -->
            
            <form action="{{ path('tech_updTUY',{'id':id}) }}" {{ form_enctype(form) }} method="POST" >
                
                <table id="lol" >
                    <tr>
                        <td><label for="exampleInputEmail1">Diamétre intérieur      </label></td>
