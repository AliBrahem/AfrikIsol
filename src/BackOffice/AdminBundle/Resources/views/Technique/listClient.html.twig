{% extends is_granted("ROLE_ADMIN")
? "AdminBundle::layoutSUP.html.twig"
: "AdminBundle::layoutTech.html.twig"%}
{% block user_content %}

    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="box-header">
                  <h3 class="box-title">Liste des Clients</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ID Client </th>
                    <th>Société </th>
                    <th>Logo</th>
                    <th>Secteur d'activité </th>
                    <th>Téléphone </th>
                    <th>Numéro télécopie</th>
                    <th>Responsable à contacter</th>
                    <th>Numéro du responsable</th>
                    
                    <th>Modifier </th>
                    
                </tr>
            </thead>
            <tbody>
                {% for Modele in Modeles %}
                    <tr>
                        <td> {{Modele.id}} </td>
                        <td> {{Modele.societe}} </td>
                        <td>  <img src="data:image/png;base64,{{ logos[loop.index0] }}" width="90px" height="80px" alt="logo" title="logo"  class="property_img"/> </td>
                       
                        <td> {{Modele.secteurActivite}} </td>
                        <td> {{Modele.telephone}} </td>
                        <td> {{Modele.telecopie}} </td>
                        <td> {{Modele.titreContact}} </td>
                        <td> {{Modele.contact}} </td>
                         <td><a href="{{path("tech_updClient",{'id':Modele.id})}}"> Modifier Client </a></td>
                           
                     
                    </tr>
                {% endfor %}
            </tbody>            
        </table>
                </div>
    </div>
    </div>
    <div class="row">

    </div><!-- /.row (main row) -->

{% endblock user_content %}