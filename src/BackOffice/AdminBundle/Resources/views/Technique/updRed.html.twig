                        <td>{{ form_widget(form.prixUnitaireIsolant) }} </td>
             
                    </tr>
                    <tr>
                        <td><label for="exampleInputEmail1">Prix </label></td>
                        <td>{{ form_widget(form.prix) }} </td>
             
                    </tr>
                    <tr>
                         {{ form_rest(form) }}
                     </tr>
                </table>
                <div>
                    <br>
                    <input type="submit" class="btn btn-primary btn-block btn-flat" value="Mettre à jour" />
                </div>
            </form>
        </div><!-- ./col -->
    </div>
    <!-- Main row -->
    <div class="row">

    </div><!-- /.row (main row) -->
{% endblock user_content %}